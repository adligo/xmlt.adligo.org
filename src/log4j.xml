<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="X" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%t %d{hh:mm:ss} %c %M %p line %L -%m%n"/>
    </layout>
  </appender>

  <logger name="org.adligo.xml.parsers.template.TemplateParserEngine"  additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="X"/>
  </logger>
  <root>
    <priority value="WARN"/>
    <appender-ref ref="X" />
  </root>

</log4j:configuration>
